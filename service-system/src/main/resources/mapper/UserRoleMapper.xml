<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feidian.mapper.UserRoleMapper">

    <!-- 定义UserRole的映射关系 -->
    <!-- 定义UserRole的映射关系 -->
    <resultMap id="UserRoleBaseResultMap" type="com.feidian.po.UserRole">
        <id column="user_id" property="userId" />
        <result column="role_id" property="roleId" />
        <result column="is_deleted" property="isDeleted" />
        <result column="create_time" property="createTime" />
        <result column="create_by" property="createBy" />
        <result column="update_time" property="updateTime" />
        <result column="update_by" property="updateBy" />
    </resultMap>

    <!-- 更新用户角色 -->
    <update id="updateUserRole" parameterType="com.feidian.po.UserRole">
        UPDATE user_role
        SET role_id = #{roleId},
            is_deleted = #{isDeleted},
            create_time = #{createTime},
            create_by = #{createBy},
            update_time = #{updateTime},
            update_by = #{updateBy}
        WHERE user_id = #{userId}
    </update>

    <select id="selectByUserId" resultMap="UserRoleBaseResultMap">
        SELECT *
        FROM user_role
        WHERE user_id = #{userId}
    </select>

</mapper>
