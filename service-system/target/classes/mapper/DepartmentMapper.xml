<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.feidian.mapper.DepartmentMapper">

    <resultMap id="DepartmentMessageMap" type="com.feidian.po.Department">
        <result column="department_name" property="departmentName"/>
        <result column="introduction" property="introduction"/>
    </resultMap>

    <!-- 根据id查询Department -->
    <resultMap id="DepartmentResultMap" type="com.feidian.po.Department">
        <id property="id" column="id" />
        <result property="isDeleted" column="is_deleted" />
    </resultMap>
    <select id="getDepartmentById" resultMap="DepartmentResultMap">
        select id, is_deleted from department where id = #{id}
    </select>

    <select id="getAllName" resultType="java.lang.String">
        select department_name
        from department
        where is_deleted = 0
    </select>

    <select id="getByName" resultType="java.lang.String">
        select introduction
        from department
        where department_name = #{name}
          and is_deleted = 0
    </select>
    <select id="getAllMessage" resultType="com.feidian.po.Department">
        select department_name,introduction from department where is_deleted = 0 and id != 5
    </select>

    <!-- 更新Department介绍信息 -->
    <update id="updateDepartment">
        update department
        set introduction = #{introduction},
            update_time = #{updateTime}
        where id = #{id}
    </update>


</mapper>